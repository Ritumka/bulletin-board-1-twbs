<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="card">
        <div class="card-header d-flex align-items-center">
          <h6>All boards</h6>
          <button type="button" class="ms-auto btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add a new board
          </button>
        </div>
        <div class="list-group list-group-flush">
          <% @list_of_boards.each do |a_board| %>
            <a class="d-flex list-group-item list-group-item-action" href="/boards/<%= a_board.id %>">
              <%= a_board.name %>

              <div class="ms-auto">
                <i class="fa-solid fa-chevron-right"></i>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <form action="/insert_board" method="post">
          <div>
            <label for="name_box" class="form-label">
              Name
            </label>
            <input type="text" id="name_box" name="query_name" class="form-control  my-3">
          </div>
          <button class="btn btn-success w-100">
            Add board
          </button>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
